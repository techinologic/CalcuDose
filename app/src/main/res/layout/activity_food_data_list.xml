<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.androidbootcamp.calcudose.FoodDataListActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/food_list_view"
        android:layout_below="@+id/textView35"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10sp">
    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Name"
        android:id="@+id/textView35"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servings"
        android:id="@+id/textView36"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView37"
        android:layout_toStartOf="@+id/textView37"
        android:layout_marginRight="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carbs"
        android:id="@+id/textView37"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView38"
        android:layout_toStartOf="@+id/textView38"
        android:layout_marginRight="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fat"
        android:id="@+id/textView38"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView39"
        android:layout_toStartOf="@+id/textView39"
        android:layout_marginRight="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protein"
        android:id="@+id/textView39"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/btn_list_search"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView36"
        android:layout_alignStart="@+id/textView36" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD new"
        android:id="@+id/btn_addnew"
        android:layout_alignTop="@+id/btn_list_search"
        android:layout_toLeftOf="@+id/btn_list_search"
        android:layout_toStartOf="@+id/btn_list_search" />
</RelativeLayout>

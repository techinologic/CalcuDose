<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.androidbootcamp.calcudose.LogFood">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="160sp"
        android:layout_height="40sp"
        android:text="@string/btnAddNewFood"
        android:id="@+id/btnAddNewFood"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="160sp"
        android:layout_height="40sp"
        android:text="My Foods"
        android:id="@+id/btnFoodMyFoods"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="160sp"
        android:layout_height="40sp"
        android:text="View saved foods"
        android:id="@+id/btn_savedFoods"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="160sp"
        android:layout_height="40sp"
        android:text="Search Food"
        android:id="@+id/btn_searchFood"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/btnFoodMyFoods"
        android:layout_alignLeft="@+id/btnFoodMyFoods"
        android:layout_alignStart="@+id/btnFoodMyFoods" />

</RelativeLayout>
